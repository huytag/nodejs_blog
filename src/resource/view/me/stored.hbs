<div class="mt-4">
    <h1>Cac blog</h1>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">Stt</th>
                <th scope="col">Ten blog</th>
                <th scope="col">Trinh do</th>
                <th scope="col">Thoi gian tao</th>
            </tr>
        </thead>
        <tbody>
             {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.lever}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/courses/{{this._id}}/edit" class="btn btn-success">Sua</a>
                    <a href="" class="btn btn-danger">Xoa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>